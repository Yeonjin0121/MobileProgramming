<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_color2"
    android:layout_marginBottom="60dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:background="@color/btn_color2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomeClientFragment">

        <!-- 상단 로고 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#F9F9F9"
            android:padding="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_logo_name"
                android:layout_marginTop="0dp"
                android:maxWidth="200dp" />
        </LinearLayout>



        <!-- 새싹등급 텍스트 및 이미지 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">


            <TextView
                android:id="@+id/home_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="8dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="40dp"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                android:src="@drawable/rank" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFFFF"
            >
            <!-- 수거신청과 이용방법을 위한 정사각형 요소, 이미지와 텍스트 포함 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                >

                <FrameLayout
                    android:id="@+id/apply"
                    android:layout_width="0dp"
                    android:layout_height="600dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="4dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="폐의약품 수거함 \n지도"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="38sp"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp" />

                        <ImageView
                            android:layout_width="320dp"
                            android:layout_height="220dp"
                            android:contentDescription="인공지능"
                            android:src="@drawable/map"

                            android:layout_marginTop="48dp" />

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/howtouseservice"
                    android:layout_width="0dp"
                    android:layout_height="600dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="4dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이용 방법"
                            android:textColor="#000000"
                            android:textSize="38sp"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp" />

                        <ImageView
                            android:layout_width="320dp"
                            android:layout_height="220dp"
                            android:src="@drawable/light"
                            android:contentDescription="수거신청 아이콘"
                            android:layout_marginTop="100dp" />


                    </LinearLayout>
                </FrameLayout>





            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</FrameLayout>