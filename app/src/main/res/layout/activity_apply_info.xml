<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplyInfoActivity"
    android:fitsSystemWindows="true"
    android:background="@color/bg_color2"
    >

    <!-- 새로운 상단 영역 -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 왼쪽 꺽쇠 버튼 -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="Back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <!-- 수거 신청 텍스트 -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="수거 신청 상세"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>




    <!-- 구분선 -->
    <View
        android:id="@+id/line_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 기존 상단 고정 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/address_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:text="주소 정보"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/address_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:text="서울시 용산구 청파동"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@id/address_info_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <EditText
            android:id="@+id/address_detail_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:hint="주소를 입력하세요"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/address_info_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />

        <Button
            android:id="@+id/change_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:text="변경"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_border"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@id/address_detail_text"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 구분선 -->
    <View
        android:id="@+id/line_divider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 스크롤 가능한 영역 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/line_divider"
        app:layout_constraintBottom_toTopOf="@id/next_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 스크롤 영역의 LinearLayout 내부 최상단에 추가 -->
            <TextView
                android:id="@+id/upload_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="수거할 물품 이미지"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/upload_image_button"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_image_search_24"
                android:backgroundTint="@color/btn_color2"
                android:layout_marginBottom="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/image_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"/>



            <ImageView
                android:id="@+id/selected_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <View
                android:id="@+id/line_divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/darker_gray" />

            <!-- 수거 날짜 -->
            <TextView
                android:id="@+id/collection_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="수거 날짜"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selected_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="선택된 날짜 및 요일"
                android:textSize="28sp" />

            <Button
                android:id="@+id/select_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="날짜 선택"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/btn_border"
                app:backgroundTint="@null" />

            <View
                android:id="@+id/line_divider_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/collection_time_slot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="수거 시간대"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/time_button_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"

                        android:textColor="@android:color/black"
                        android:text="06:00 ~ 07:00"
                        />

                    <Button
                        android:id="@+id/time_button_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"


                        android:textColor="@android:color/black"
                        android:text="07:00 ~ 08:00" />

                    <Button
                        android:id="@+id/time_button_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="08:00 ~ 09:00" />

                    <Button
                        android:id="@+id/time_button_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="09:00 ~ 10:00" />

                    <Button
                        android:id="@+id/time_button_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"

                        android:text="10:00 ~ 11:00" />

                    <Button
                        android:id="@+id/time_button_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="11:00 ~ 12:00" />

                    <Button
                        android:id="@+id/time_button_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="12:00 ~ 13:00" />

                    <Button
                        android:id="@+id/time_button_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="13:00 ~ 14:00" />

                    <Button
                        android:id="@+id/time_button_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="14:00 ~ 15:00" />

                    <Button
                        android:id="@+id/time_button_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="15:00 ~ 16:00" />

                    <Button
                        android:id="@+id/time_button_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="16:00 ~ 17:00" />

                    <Button
                        android:id="@+id/time_button_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        app:backgroundTint="@null"
                        android:textSize="25sp"
                        android:layout_margin="12dp"
                        android:textColor="@android:color/black"
                        android:text="17:00 ~ 18:00" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/next_button"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@drawable/edittext_frame"
        app:backgroundTint="@color/btn_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
