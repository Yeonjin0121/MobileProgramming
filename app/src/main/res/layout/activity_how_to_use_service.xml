<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id = "@+id/howtouse"
    android:background="@color/white">

    <!-- 상단 탭 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <!-- 서비스 이용 방법 탭 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="서비스 이용 방법"
            android:textSize="25sp"
            android:id="@+id/textViewHowToUseService"
            android:gravity="center"
            android:background="@drawable/edittext_frame"
            android:backgroundTint="@color/btn_color"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"

            />

        <!-- 폐의약품 처리 방법 탭 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textViewHowToUse"
            android:text="폐의약품 처리 방법"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/edittext_frame"
            android:backgroundTint="@color/bg_color"
            android:padding="8dp"
            android:textColor="#9E9E9E" />
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <!-- 서비스 이용 방법 내용 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 회원가입 후 로그인하여 사용자가 의뢰하거나\n    수거자가 수거할 수 있습니다."
                android:textSize="29sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                />

            <!-- 서비스 이용 방법 내용 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. 수거 신청 시 필요한 정보를 입력한 후,\n    신청을 완료할 수 있습니다."
                android:textSize="29sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"/>

            <!-- 서비스 이용 방법 내용 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. 수거자는 의뢰된 내역을 확인하고,\n    수거를 진행할 수 있습니다."
                android:textSize="29sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"/>

            <!-- 서비스 이용 방법 내용 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. 수거 완료 후, 결과를 확인하고 포인트가 적립됩니다."
                android:textSize="29sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#d3d3d3"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"/>


            <!-- 유의사항 제목 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="서비스 이용 시 유의사항"
                android:textSize="35sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="55dp"
                android:textStyle="bold"/>

            <!-- 유의사항 항목 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 개인정보 보호를 위해 신뢰할 수 있는 서비스를 제공합니다."
                android:textSize="29sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"/>

            <!-- 유의사항 항목 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 폐의약품 처리 방법을 정확히 따라 주세요."
                android:textSize="29sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"/>

            <!-- 유의사항 항목 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 수거 진행 전, 의뢰자의 주소 및 수거 시간대를
                \n  확인해 주세요."
                android:textSize="29sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"/>


        </LinearLayout>
    </ScrollView>

    <!-- 홈 화면으로 버튼 -->
    <Button
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:text="홈 화면으로"
        android:textSize="23sp"
        android:paddingBottom="5dp"
        android:backgroundTint="@color/btn_color"
        android:textColor="#FFFFFF"
        android:layout_marginTop="210dp"
        android:id="@+id/btnHome"
        android:layout_gravity="center"/>

</LinearLayout>