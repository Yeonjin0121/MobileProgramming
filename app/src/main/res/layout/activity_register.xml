<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="32dp"
    android:gravity="center">

    <!-- 상단 LinearLayout (뒤로가기 버튼과 회원가입 창 제목) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="40dp">

        <!-- 뒤로 가기 버튼 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:contentDescription="뒤로 가기 버튼"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tvSignupTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회원가입"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/userTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="사용자 타입"
        android:textSize="18sp" />

    <!-- 회원가입 화면 내용 LinearLayout (이름, 아이디, 이메일, 비밀번호, 비밀번호 확인 입력 필드) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="20dp">

        <!-- 이름 입력 필드 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름을 입력해주세요."
            android:inputType="textPersonName"
            android:importantForAccessibility="yes"
            android:contentDescription="이름 입력란"
            android:layout_marginBottom="20dp"/>

        <!-- 아이디 입력 필드 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디" />

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디를 입력해주세요."
            android:inputType="text"
            android:importantForAccessibility="yes"
            android:contentDescription="아이디 입력란"
            android:layout_marginBottom="20dp"/>

        <!-- 이메일 입력 필드 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일을 입력해주세요."
            android:inputType="textEmailAddress"
            android:importantForAccessibility="yes"
            android:contentDescription="이메일 입력란"
            android:layout_marginBottom="20dp"/>

        <!-- 비밀번호 입력 필드 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 입력해주세요."
            android:inputType="textPassword"
            android:drawableEnd="@drawable/visibility_off"
            android:importantForAccessibility="yes"
            android:contentDescription="비밀번호 입력란"
            android:layout_marginBottom="20dp"/>

        <!-- 비밀번호 확인 입력 필드 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인" />

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 다시 입력해주세요."
            android:inputType="textPassword"
            android:drawableEnd="@drawable/visibility_off"
            android:importantForAccessibility="yes"
            android:contentDescription="비밀번호 확인 입력란" />

    </LinearLayout>

    <!-- 회원가입 버튼 (하단에 고정) -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:background="#DDF3FF"
        android:importantForAccessibility="yes"
        android:contentDescription="회원가입 버튼"/>

</LinearLayout>
