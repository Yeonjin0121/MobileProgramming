<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MobileProjectChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorPrimaryVariant">@color/purple_grey_40</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_grey_40</item>
        <item name="colorSecondaryVariant">@color/purple_grey_40</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/pink_40</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>
</resources>